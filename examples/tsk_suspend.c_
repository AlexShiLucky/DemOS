#include <stm32f4_discovery.h>
#include <os.h>

void slave ( void );
void master( void );

tsk_t sla = TSK_INIT(slave);
tsk_t mas = TSK_INIT(master);
tmr_t tmr = 0;

void slave( void )
{
	tsk_begin();

	tsk_suspend(tsk_this);
	LED_Tick();

	tsk_end();
}

void master( void )
{
	tsk_begin();

	tmr_waitFor(&tmr, SEC);
	tsk_resume(&sla);

	tsk_end();
}

int main( void )
{
	LED_Init();

	tsk_start(&sla);
	tsk_start(&mas);
	sys_start();
}
